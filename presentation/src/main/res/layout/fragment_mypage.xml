<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.MypageFragment">

    <data>

        <import type="android.view.View"/>
        <import type="com.umc.domain.model.enums.LoginType" />

        <variable
            name="vm"
            type="com.umc.presentation.ui.mypage.MypageViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neutral100"
        android:paddingHorizontal="16dp"
        android:paddingTop="56dp"
        android:paddingBottom="64dp"
        >


        <TextView
            android:id="@+id/mypage_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Title2Bold"
            android:textColor="@color/neutral800"
            android:text="@string/mypage_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <!--유저 카드-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_cdv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/neutral000"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_tv_title">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/mypage_circleimv_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                app:strokeWidth="1dp"
                app:strokeColor="@color/neutral200"
                app:shapeAppearanceOverlay="@style/CircleImageAppearance"
                app:layout_constraintTop_toTopOf="@id/mypage_tv_nickname"
                app:layout_constraintBottom_toBottomOf="@id/mypage_flexbox_badge"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/mypage_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/Title3Bold"
                android:textColor="@color/neutral800"
                android:text="홍길동"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/mypage_circleimv_profile"
                app:layout_constraintTop_toTopOf="parent"
                />

            <com.umc.presentation.component.UButton
                android:id="@+id/mypage_cdv_kakao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="@{vm.uiState.loginType == LoginType.KAKAO ? View.VISIBLE : View.GONE }"
                app:cardBackgroundColor="@color/warning500"
                app:borderWidth="0dp"
                app:text="@string/mypage_kakao"
                app:textAppearance="@style/Caption1Bold"
                app:textColor="@color/neutral700"
                app:buttonElevation="0"
                app:contentPaddingBottom="4dp"
                app:contentPaddingTop="4dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingRight="8dp"
                app:layout_constraintTop_toTopOf="@id/mypage_tv_nickname"
                app:layout_constraintBottom_toBottomOf="@id/mypage_tv_nickname"
                app:layout_constraintStart_toEndOf="@id/mypage_tv_nickname"
                />

            <com.umc.presentation.component.UButton
                android:id="@+id/mypage_cdv_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="@{vm.uiState.loginType == LoginType.GOOGLE ? View.VISIBLE : View.GONE }"
                app:cardBackgroundColor="@color/neutral100"
                app:borderWidth="0dp"
                app:text="@string/mypage_google"
                app:textAppearance="@style/Caption1Bold"
                app:textColor="@color/neutral700"
                app:buttonElevation="0"
                app:contentPaddingBottom="4dp"
                app:contentPaddingTop="4dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingRight="8dp"
                app:layout_constraintTop_toTopOf="@id/mypage_tv_nickname"
                app:layout_constraintBottom_toBottomOf="@id/mypage_tv_nickname"
                app:layout_constraintStart_toEndOf="@id/mypage_tv_nickname"
                />

            <TextView
                android:id="@+id/mypage_tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/Headline"
                android:textColor="@color/neutral600"
                android:text="중앙대학교"
                app:layout_constraintStart_toStartOf="@id/mypage_tv_nickname"
                app:layout_constraintTop_toBottomOf="@id/mypage_tv_nickname"
                />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/mypage_flexbox_badge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="stretch"
                app:alignContent="flex_start"
                app:tagItems="@{vm.uiState.myCareer}"
                app:tagLayoutId="@{@layout/item_mypage_tag}"
                app:layout_constraintStart_toStartOf="@id/mypage_tv_nickname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mypage_tv_school"
                />

            <!--링크 3종 세트-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mypage_btn_github"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="24dp"
                android:onClick="@{()->vm.navigateToGithub()}"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/neutral200"
                app:cardBackgroundColor="@color/select_color_neutral000"
                app:rippleColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/mypage_flexbox_badge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mypage_btn_linkedin"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_github_link"
                        app:tint="@color/neutral800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:text="@string/github"
                        android:textColor="@color/neutral800"
                        android:textAppearance="@style/Subheadline" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mypage_btn_blog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="24dp"
                android:onClick="@{()->vm.navigateToBlog()}"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/neutral200"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:cardBackgroundColor="@color/select_color_neutral000"
                app:rippleColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/mypage_flexbox_badge"
                app:layout_constraintStart_toEndOf="@id/mypage_btn_linkedin"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_blog_link"
                        app:tint="@color/neutral800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/blog"
                        android:maxLines="1"
                        android:textColor="@color/neutral800"
                        android:textAppearance="@style/Subheadline" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mypage_btn_linkedin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="8dp"
                android:onClick="@{()->vm.navigateToLinkedin()}"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/neutral200"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:cardBackgroundColor="@color/select_color_neutral000"
                app:rippleColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/mypage_flexbox_badge"
                app:layout_constraintStart_toEndOf="@id/mypage_btn_github"
                app:layout_constraintEnd_toStartOf="@id/mypage_btn_blog">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_linkedin_link"
                        app:tint="@color/neutral800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/linkedin"
                        android:maxLines="1"
                        android:textColor="@color/neutral800"
                        android:textAppearance="@style/Subheadline" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.umc.presentation.component.UButton
                android:id="@+id/mypage_btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:onClick="@{()->vm.navigateToEditProfile()}"
                app:cardBackgroundColor="@color/neutral100"
                app:pressedColor="@color/neutral300"
                app:borderWidth="0dp"
                app:text="@string/mypage_modify_profile"
                app:textAppearance="@style/CalloutBold"
                app:textColor="@color/neutral800"
                app:buttonElevation="0"
                app:contentPaddingBottom="13dp"
                app:contentPaddingTop="13dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/mypage_btn_github"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 중앙 건의함-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_btn_suggest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/primary100"
            android:onClick="@{()->vm.navigateToSuggetion()}"
            app:cardBackgroundColor="@color/primary100"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_cdv_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            >

            <ImageView
                android:id="@+id/mypage_imv_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_raise_hand"
                android:padding="12dp"
                android:background="@drawable/bg_primary500_radius8"
                app:tint="@color/neutral000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mypage_tv_suggest_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/HeadlineBold"
                android:textColor="@color/primary600"
                android:text="@string/mypage_suggest"
                app:layout_constraintStart_toEndOf="@id/mypage_imv_suggest_title"
                app:layout_constraintEnd_toStartOf="@id/mypage_imv_suggest_go"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/mypage_tv_suggest_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/Footnote"
                android:textColor="@color/neutral700"
                android:text="@string/mypage_suggest_cotnet"
                app:layout_constraintStart_toEndOf="@id/mypage_imv_suggest_title"
                app:layout_constraintEnd_toStartOf="@id/mypage_imv_suggest_go"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <ImageView
                android:id="@+id/mypage_imv_suggest_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_next"
                app:tint="@color/primary500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--내 활동-->
        <TextView
            android:id="@+id/mypage_tv_title_myactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/mypage_myactivity"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/mypage_btn_suggest"
            app:layout_constraintStart_toStartOf="parent"

            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_cdv_myactivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/neutral000"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_tv_title_myactivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--내가 쓴 글-->
            <LinearLayout
                android:id="@+id/mypage_btn_mypost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="@{() -> vm.navigateToMypost()}"
                android:padding="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_page"
                    app:tint="@color/neutral800" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/mypage_mypost"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/neutral800" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_next"
                    app:tint="@color/neutral400" />
            </LinearLayout>

            <!--댓글 단 글-->
            <LinearLayout
                android:id="@+id/mypage_btn_mycomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="@{() -> vm.navigateToMyComment()}"
                android:padding="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    app:tint="@color/neutral800" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/mypage_mycomment"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/neutral800" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_next"
                    app:tint="@color/neutral400" />
            </LinearLayout>

            <!--스크랩-->
            <LinearLayout
                android:id="@+id/mypage_btn_scrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="@{() -> vm.navigateToScrap()}"
                android:padding="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    app:tint="@color/neutral800" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="@string/mypage_myscrap"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/neutral800" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_next"
                    app:tint="@color/neutral400" />
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--설정-->
        <TextView
            android:id="@+id/mypage_tv_title_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/setting"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/mypage_cdv_myactivity"
            app:layout_constraintStart_toStartOf="parent"

            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_cdv_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/neutral000"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_tv_title_setting">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/mypage_imv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bottom_nav_notice"
                    app:tint="@color/neutral800"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/mypage_setting_notice"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/neutral800"
                    app:layout_constraintStart_toEndOf="@id/mypage_imv_setting"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <com.umc.presentation.component.USwitch
                    android:id="@+id/mypage_switch_setting_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{vm.uiState.isAlarmOn}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--소셜 연동-->
        <TextView
            android:id="@+id/mypage_tv_title_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/mypage_social"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/mypage_cdv_setting"
            app:layout_constraintStart_toStartOf="parent"

            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_cdv_social"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/neutral000"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_tv_title_social">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/mypage_imv_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{vm.uiState.loginType == LoginType.KAKAO ? @drawable/ic_google : @drawable/ic_kakao}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@{vm.uiState.loginType == LoginType.KAKAO ? @string/mypage_google : @string/mypage_kakao}"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/neutral800"
                    app:layout_constraintStart_toEndOf="@id/mypage_imv_social"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="연동하기"
                    android:layout_marginEnd="8dp"
                    android:textAppearance="@style/Subheadline"
                    android:textColor="@color/neutral800"
                    app:layout_constraintEnd_toStartOf="@id/mypage_imv_social_next"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageView
                    android:id="@+id/mypage_imv_social_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_next"
                    app:tint="@color/neutral400"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--정보-->
        <TextView
            android:id="@+id/mypage_tv_title_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/information"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/mypage_cdv_social"
            app:layout_constraintStart_toStartOf="parent"

            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_cdv_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/neutral000"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_tv_title_information">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/mypage_imv_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_error"
                    app:tint="@color/neutral800"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/mypage_opensource"
                    android:textAppearance="@style/Body"
                    android:textColor="@color/neutral800"
                    app:layout_constraintStart_toEndOf="@id/mypage_imv_information"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_next"
                    app:tint="@color/neutral400"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--로그아웃 버튼-->
        <com.umc.presentation.component.UButton
            android:id="@+id/mypage_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->vm.logout()}"
            android:layout_marginTop="32dp"
            app:contentPadding="16dp"
            app:cardBackgroundColor="@color/neutral000"
            app:cornerRadius="12dp"
            app:pressedColor="@color/neutral200"
            app:text="@string/logout"
            app:textAppearance="@style/Body"
            app:textColor="@color/danger500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_cdv_information"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>