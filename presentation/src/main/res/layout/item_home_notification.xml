<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral100">

    <View
        android:id="@+id/item_view_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/CalloutBold"
        android:textColor="@color/neutral800"
        android:text="중앙 어쩌구 참전!"
        android:gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_tv_timeline"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/item_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Footnote"
        android:gravity="start"
        android:textColor="@color/neutral600"
        android:text="축하합니다. 축하합니다"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/item_tv_title"
        app:layout_constraintEnd_toStartOf="@id/item_tv_timeline"
        app:layout_constraintTop_toBottomOf="@id/item_tv_title"/>

    <TextView
        android:id="@+id/item_tv_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Footnote"
        android:textColor="@color/neutral400"
        android:text="12시간 전"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/item_tv_title"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@+id/item_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral200"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tv_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>