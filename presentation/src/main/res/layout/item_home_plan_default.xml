<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/neutral000"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_date"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral200"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_tv_dayweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MON"
                    android:textColor="@color/neutral300"
                    android:textAppearance="@style/Caption2Bold"/>

                <TextView
                    android:id="@+id/card_tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/neutral300"
                    android:textAppearance="@style/CalloutBold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/card_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="아이디어톤"
            android:textAppearance="@style/CalloutBold"
            android:textColor="@color/neutral400"
            app:layout_constraintStart_toEndOf="@id/card_date"
            app:layout_constraintTop_toTopOf="@id/card_date"
            app:layout_constraintBottom_toTopOf="@id/card_tv_time"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/card_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textAppearance="@style/Footnote"
            android:textColor="@color/neutral400"
            app:layout_constraintStart_toStartOf="@id/card_tv_title"
            app:layout_constraintTop_toBottomOf="@id/card_tv_title"
            app:layout_constraintBottom_toBottomOf="@id/card_date" />

        <ImageView
            android:id="@+id/card_imv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_next"
            app:tint="@color/neutral300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>