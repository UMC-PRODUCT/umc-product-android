<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.PlanDetailFragment">

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.umc.presentation.ui.home.PlanDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neutral100"
        android:paddingTop="64dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp"
        >

        <!-- 상단 바 -->
        <ImageView
            android:id="@+id/plandetail_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:tint="@color/neutral800"
            android:onClick="@{()->vm.onClickBackPressed()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/plandetail_tv_big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Title2Bold"
            android:textColor="@color/neutral800"
            android:text="@string/home_plan_detail_title"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/plandetail_btn_back"
            app:layout_constraintBottom_toBottomOf="@id/plandetail_btn_back"
            app:layout_constraintStart_toEndOf="@id/plandetail_btn_back"
            />

        <ImageView
            android:id="@+id/plandetail_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_kebab"
            app:tint="@color/neutral800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!--일정 상세 내용-->
        <com.umc.presentation.component.UButton
            android:id="@+id/plandetail_cdv_dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:backgroundColor="@color/primary100"
            app:text = "ACTIVE"
            app:textAppearance="@style/FootnoteBold"
            app:textColor="@color/primary600"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp"
            app:contentPaddingLeft="8dp"
            app:contentPaddingRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/plandetail_btn_back"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/plandetail_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Title3Bold"
            android:textColor="@color/neutral800"
            android:layout_marginTop="16dp"
            android:text="TEST"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="@id/plandetail_cdv_dday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plandetail_cdv_dday"/>

        <TextView
            android:id="@+id/plandetail_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Subheadline"
            android:textColor="@color/neutral600"
            android:text="2026.01.01"
            android:gravity="start"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/plandetail_tv_title"
            app:layout_constraintTop_toBottomOf="@id/plandetail_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!--일시 및 장소 카드뷰-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/plandetail_cdv_cover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/neutral000"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plandetail_tv_date">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                >


                <!--일시-->

                <ImageView
                    android:id="@+id/plandetail_imv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginStart="16dp"
                    app:tint="@color/primary500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/plandetail_tv_calendar_title"
                    app:layout_constraintBottom_toBottomOf="@id/plandetail_tv_calendar_time"
                    />

                <TextView
                    android:id="@+id/plandetail_tv_calendar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/SubheadlineBold"
                    android:textColor="@color/neutral800"
                    android:text="@string/home_plan_detail_calendar"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/plandetail_imv_calendar"
                    android:gravity="start"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/plandetail_tv_calendar_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Footnote"
                    android:textColor="@color/neutral600"
                    android:text="@string/home_plan_detail_calendar"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/plandetail_tv_calendar_title"
                    app:layout_constraintTop_toBottomOf="@id/plandetail_tv_calendar_title"/>

                <TextView
                    android:id="@+id/plandetail_tv_calendar_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Footnote"
                    android:textColor="@color/neutral600"
                    android:text="@string/home_plan_detail_calendar"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/plandetail_tv_calendar_title"
                    app:layout_constraintTop_toBottomOf="@id/plandetail_tv_calendar_day"/>


                <View
                    android:id="@+id/plandetail_view_divide"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/neutral300"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/plandetail_tv_calendar_time"/>


                <!--장소-->

                <ImageView
                    android:id="@+id/plandetail_imv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginStart="16dp"
                    app:tint="@color/primary500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/plandetail_tv_location_title"
                    app:layout_constraintBottom_toBottomOf="@id/plandetail_tv_location_map"
                    />

                <TextView
                    android:id="@+id/plandetail_tv_location_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/SubheadlineBold"
                    android:textColor="@color/neutral800"
                    android:text="@string/home_plan_detail_location"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="start"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/plandetail_imv_location"
                    app:layout_constraintTop_toBottomOf="@id/plandetail_view_divide"/>

                <TextView
                    android:id="@+id/plandetail_tv_location_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Footnote"
                    android:textColor="@color/neutral600"
                    android:text="@string/home_plan_detail_location"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/plandetail_tv_location_title"
                    app:layout_constraintTop_toBottomOf="@id/plandetail_tv_location_title"/>

                <TextView
                    android:id="@+id/plandetail_tv_location_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Footnote"
                    android:textColor="@color/primary500"
                    android:text="@string/home_plan_detail_show_map"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/plandetail_tv_location_title"
                    app:layout_constraintTop_toBottomOf="@id/plandetail_tv_location_place"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--상세 안내 파트-->
        <TextView
            android:id="@+id/plandetail_tv_plan_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/Title3Bold"
            android:textColor="@color/neutral800"
            android:text="@string/home_plan_detail_plan_notice"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plandetail_cdv_cover"
            />

        <TextView
            android:id="@+id/plandetail_tv_plan_information_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Body"
            android:textColor="@color/neutral600"
            android:text="끼하하하핳하하하하하하하하하하하하하하하하하하하하하하ㅏ하핳핳"
            android:gravity="start"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plandetail_tv_plan_information_title"
            app:layout_constraintBottom_toTopOf="@id/plandetail_button_check"
            />


        <com.umc.presentation.component.UButton
            android:id="@+id/plandetail_button_check"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:visibility="@{vm.uiState.isToday == true ? View.VISIBLE : View.GONE}"
            android:onClick="@{()->vm.onClickConfirmAttention()}"
            app:backgroundColor="@color/accent500"
            app:cornerRadius="16dp"
            app:pressedColor="@color/accent700"
            app:text="@string/home_plan_detail_check_confirm"
            app:textAppearance="@style/HeadlineBold"
            app:textColor="@color/neutral000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <!--
        android:onClick="@{}"
            android:enabled="@{}"
        -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>