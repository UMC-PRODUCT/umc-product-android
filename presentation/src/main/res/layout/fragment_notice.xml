<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.NoticeFragment">

    <data>

        <variable
            name="vm"
            type="com.umc.presentation.ui.home.NoticeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neutral100"
        android:paddingTop="64dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp"
        >

        <!-- 상단 바 -->
        <ImageView
            android:id="@+id/notice_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:tint="@color/neutral800"
            android:onClick="@{()->vm.onClickBackPressed()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/notice_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Title2Bold"
            android:textColor="@color/neutral800"
            android:text="@string/home_notice_title"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/notice_btn_back"
            app:layout_constraintBottom_toBottomOf="@id/notice_btn_back"
            app:layout_constraintStart_toEndOf="@id/notice_btn_back"
            />

        <ImageView
            android:id="@+id/notice_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_kebab"
            android:tint="@color/neutral800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>