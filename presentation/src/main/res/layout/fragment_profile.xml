<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.profile.ProfileFragment">

    <data>
        <import type="android.view.View"/>
        <import type="com.umc.domain.model.enums.LoginType" />

        <variable
            name="vm"
            type="com.umc.presentation.ui.mypage.profile.ProfileViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="56dp"
        android:paddingHorizontal="16dp"
        android:background="@color/neutral000"
        >

        <!-- 상단 바 -->
        <ImageView
            android:id="@+id/profile_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:tint="@color/neutral800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/profile_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Title2Bold"
            android:textColor="@color/neutral800"
            android:layout_marginStart="8dp"
            android:text="@string/mypage_modify_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_btn_back"
            />

        <TextView
            android:id="@+id/profile_tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CalloutBold"
            android:textColor="@color/primary500"
            android:clickable="true"
            android:text="@string/complete"
            app:layout_constraintTop_toTopOf="@id/profile_tv_title"
            app:layout_constraintBottom_toBottomOf="@id/profile_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            />


    <!--content 담긴 스크롤뷰-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:isScrollContainer="true"
        android:fillViewport="true"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        >

        <!--프로필-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_circleimv_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral200"
            app:shapeAppearanceOverlay="@style/CircleImageAppearance"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_circleimv_profile_change"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera"
            android:background="@color/neutral000"
            app:contentPadding="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral200"
            app:shapeAppearanceOverlay="@style/CircleImageAppearance"
            app:layout_constraintBottom_toBottomOf="@id/profile_circleimv_profile"
            app:layout_constraintEnd_toEndOf="@id/profile_circleimv_profile"
            />

        <!--연동된 계정-->
        <TextView
            android:id="@+id/profile_tv_title_connect_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_connect_account"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/profile_circleimv_profile"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_cdv_connect_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/neutral100"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_connect_account">

            <TextView
                android:id="@+id/profile_tv_connect_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:gravity="start|center_vertical"
                android:text="@string/profile_give_login"
                android:textAppearance="@style/Callout"
                android:textColor="@color/neutral600" />

        </com.google.android.material.card.MaterialCardView>

        <com.umc.presentation.component.UButton
            android:id="@+id/profile_cdv_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="@{vm.uiState.loginType == LoginType.KAKAO ? View.VISIBLE : View.GONE }"
            app:cardBackgroundColor="@color/warning500"
            app:borderWidth="0dp"
            app:text="@string/mypage_kakao"
            app:textAppearance="@style/Caption1Bold"
            app:textColor="@color/neutral700"
            app:buttonElevation="0"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp"
            app:contentPaddingLeft="8dp"
            app:contentPaddingRight="8dp"
            app:layout_constraintTop_toTopOf="@id/profile_cdv_connect_account"
            app:layout_constraintEnd_toEndOf="@id/profile_cdv_connect_account"
            app:layout_constraintBottom_toBottomOf="@id/profile_cdv_connect_account"
            />

        <com.umc.presentation.component.UButton
            android:id="@+id/profile_cdv_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="@{vm.uiState.loginType == LoginType.GOOGLE ? View.VISIBLE : View.GONE }"
            app:cardBackgroundColor="@color/neutral100"
            app:borderWidth="0dp"
            app:text="@string/mypage_google"
            app:textAppearance="@style/Caption1Bold"
            app:textColor="@color/neutral700"
            app:buttonElevation="0"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp"
            app:contentPaddingLeft="8dp"
            app:contentPaddingRight="8dp"
            app:layout_constraintTop_toTopOf="@id/profile_cdv_connect_account"
            app:layout_constraintEnd_toEndOf="@id/profile_cdv_connect_account"
            app:layout_constraintBottom_toBottomOf="@id/profile_cdv_connect_account"
            />


        <!--이름/닉네임-->
        <TextView
            android:id="@+id/profile_tv_title_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_name_nickname"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_cdv_connect_account"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_cdv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/neutral100"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_nickname">

            <TextView
                android:id="@+id/profile_tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:gravity="start|center_vertical"
                android:text="@{vm.uiState.nickname}"
                android:textAppearance="@style/Callout"
                android:textColor="@color/neutral600" />

        </com.google.android.material.card.MaterialCardView>

        <!--학교 & 기수/파트-->

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profile_guideline_divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <!--학교-->
        <TextView
            android:id="@+id/profile_tv_title_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_school"
            android:gravity="start"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_cdv_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/profile_guideline_divide"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_cdv_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/neutral100"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_guideline_divide"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_school">

        <TextView
            android:id="@+id/profile_tv_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:gravity="start|center_vertical"
            android:text="@{vm.uiState.mySchool}"
            android:textAppearance="@style/Callout"
            android:textColor="@color/neutral600" />

        </com.google.android.material.card.MaterialCardView>

        <!--기수/파트-->
        <TextView
            android:id="@+id/profile_tv_title_part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_part"
            android:gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_cdv_nickname"
            app:layout_constraintStart_toEndOf="@id/profile_guideline_divide"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_cdv_part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/neutral100"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_guideline_divide"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_part">

            <TextView
                android:id="@+id/profile_tv_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:gravity="start|center_vertical"
                android:text="@{vm.uiState.myPart}"
                android:textAppearance="@style/Callout"
                android:textColor="@color/neutral600" />

        </com.google.android.material.card.MaterialCardView>


        <!--활동 이력-->
        <TextView
            android:id="@+id/profile_tv_title_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_active_summary"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_cdv_school"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_cdv_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/neutral000"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_active">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:orientation="vertical"
                app:myHistoryItems="@{vm.uiState.myActiveHistory}"/>


        </com.google.android.material.card.MaterialCardView>

        <!--깃허브 링크-->
        <TextView
            android:id="@+id/profile_tv_title_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_github_url"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_cdv_active"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.umc.presentation.component.UTextField
            android:id="@+id/profile_textfield_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/neutral000"
            app:strokeColor="@color/neutral300"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/neutral000"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_github"
            app:placeholderText="@string/profile_http_start_placeholder"
            app:textAppearance="@style/Subheadline"
            app:text="@{vm.uiState.githubLink}"
            />

        <!--링크드인 링크-->
        <TextView
            android:id="@+id/profile_tv_title_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_linkedin_url"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_textfield_github"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.umc.presentation.component.UTextField
            android:id="@+id/profile_textfield_linkedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/neutral000"
            app:strokeColor="@color/neutral300"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/neutral000"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_linkedin"
            app:placeholderText="@string/profile_http_start_placeholder"
            app:textAppearance="@style/Subheadline"
            app:text="@{vm.uiState.linkedinLink}"
            />

        <!--블로그 링크-->
        <TextView
            android:id="@+id/profile_tv_title_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/HeadlineBold"
            android:textColor="@color/neutral800"
            android:text="@string/profile_blog_url"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profile_textfield_linkedin"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.umc.presentation.component.UTextField
            android:id="@+id/profile_textfield_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/neutral000"
            app:strokeColor="@color/neutral300"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/neutral000"
            app:layout_constraintTop_toBottomOf="@id/profile_tv_title_blog"
            app:placeholderText="@string/profile_http_start_placeholder"
            app:textAppearance="@style/Subheadline"
            app:text="@{vm.uiState.blogLink}"
            />


        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>