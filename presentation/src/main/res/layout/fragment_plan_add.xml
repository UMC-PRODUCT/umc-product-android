<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.PlanAddFragment">

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.umc.presentation.ui.home.PlanAddViewModel" />
    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="56dp"
            android:paddingHorizontal="16dp"
            android:background="@color/neutral000"
            >



            <!-- 상단 바 -->
            <ImageView
                android:id="@+id/planadd_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:tint="@color/neutral800"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/planadd_tv_big_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Title2Bold"
                android:textColor="@color/neutral800"
                android:text="@string/home_plan_add_title"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/planadd_btn_back"
                app:layout_constraintBottom_toBottomOf="@id/planadd_btn_back"
                app:layout_constraintStart_toEndOf="@id/planadd_btn_back"
                />

            <!--하단 추가 스크롤 파트-->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:isScrollContainer="true"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/planadd_btn_back"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--일정 제목-->

                    <TextView
                        android:id="@+id/planadd_tv_plan_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_plan_add_plan_name"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/neutral800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="*"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/danger500"
                        app:layout_constraintStart_toEndOf="@id/planadd_tv_plan_title_name"
                        app:layout_constraintTop_toTopOf="@id/planadd_tv_plan_title_name" />

                    <com.umc.presentation.component.UTextField
                        android:id="@+id/planadd_textfield_plan_title_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/neutral000"
                        app:layout_constraintTop_toBottomOf="@id/planadd_tv_plan_title_name"
                        app:layout_constraintStart_toStartOf="@id/planadd_tv_plan_title_name"
                        app:placeholderText="@string/home_plan_add_plan_name_placeholder"
                        app:textAppearance="@style/Subheadline"
                        app:text="@{vm.uiState.planTitle}"
                        />


                    <!--일시-->
                    <TextView
                        android:id="@+id/planadd_tv_plan_title_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/home_plan_detail_calendar"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/neutral800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_textfield_plan_title_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="*"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/danger500"
                        app:layout_constraintStart_toEndOf="@id/planadd_tv_plan_title_date"
                        app:layout_constraintTop_toTopOf="@id/planadd_tv_plan_title_date" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/plandetail_cdv_cover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/neutral000"
                    app:cardBackgroundColor="@color/neutral000"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/neutral300"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/planadd_tv_plan_title_date">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    >

                    <!--하루 종일-->

                    <TextView
                        android:id="@+id/plandetail_tv_allday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/neutral600"
                        android:textAppearance="@style/Callout"
                        android:text="@string/allday"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/plandetail_switch_allday"
                        app:layout_constraintBottom_toBottomOf="@id/plandetail_switch_allday"
                        />

                    <com.umc.presentation.component.USwitch
                        android:id="@+id/plandetail_switch_allday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{vm.uiState.isAllDay}"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <View
                        android:id="@+id/plandetail_view_divide1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/neutral300"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/plandetail_switch_allday"/>


                    <TextView
                        android:id="@+id/plandetail_tv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/neutral600"
                        android:textAppearance="@style/Callout"
                        android:text="@string/start"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/plandetail_view_divide1"
                        />

                    <com.umc.presentation.component.UChip
                        android:id="@+id/plandetail_cdv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:text="2025년 2월 2일"
                        app:backgroundColor="@color/neutral000"
                        app:pressedColor="@color/neutral300"
                        app:borderColor="@color/neutral200"
                        app:borderWidth="1dp"
                        app:textAppearance="@style/SubheadlineBold"
                        app:textColor="@color/neutral500"
                        app:layout_constraintEnd_toStartOf="@id/plandetail_cdv_start_time"
                        app:layout_constraintTop_toTopOf="@id/plandetail_tv_start"
                        app:layout_constraintBottom_toBottomOf="@id/plandetail_tv_start"/>

                    />

                    <com.umc.presentation.component.UChip
                        android:id="@+id/plandetail_cdv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:text="오후 4:00"
                        app:backgroundColor="@color/neutral000"
                        app:pressedColor="@color/neutral300"
                        app:borderColor="@color/neutral200"
                        app:borderWidth="1dp"
                        app:textAppearance="@style/SubheadlineBold"
                        app:textColor="@color/neutral500"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/plandetail_tv_start"
                        app:layout_constraintBottom_toBottomOf="@id/plandetail_tv_start"/>
                        />



                    <View
                        android:id="@+id/plandetail_view_divide2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/neutral300"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/plandetail_tv_start"/>


                    <TextView
                        android:id="@+id/plandetail_tv_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/neutral600"
                        android:textAppearance="@style/Callout"
                        android:text="@string/end"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/plandetail_view_divide2"
                        />

                    <com.umc.presentation.component.UChip
                        android:id="@+id/plandetail_cdv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:text="2025년 2월 2일"
                        app:backgroundColor="@color/neutral000"
                        app:pressedColor="@color/neutral300"
                        app:borderColor="@color/neutral200"
                        app:borderWidth="1dp"
                        app:textAppearance="@style/SubheadlineBold"
                        app:textColor="@color/neutral500"
                        app:layout_constraintEnd_toStartOf="@id/plandetail_cdv_end_time"
                        app:layout_constraintTop_toTopOf="@id/plandetail_tv_end"
                        app:layout_constraintBottom_toBottomOf="@id/plandetail_tv_end"/>

                    />

                    <com.umc.presentation.component.UChip
                        android:id="@+id/plandetail_cdv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:text="오후 4:00"
                        app:backgroundColor="@color/neutral000"
                        app:pressedColor="@color/neutral300"
                        app:borderColor="@color/neutral200"
                        app:borderWidth="1dp"
                        app:textAppearance="@style/SubheadlineBold"
                        app:textColor="@color/neutral500"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/plandetail_tv_end"
                        app:layout_constraintBottom_toBottomOf="@id/plandetail_tv_end"/>

                    />


                </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                    <!--장소-->

                    <TextView
                        android:id="@+id/planadd_tv_plan_title_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/home_plan_detail_location"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/neutral800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/plandetail_cdv_cover" />


                    <com.umc.presentation.component.UTextField
                        android:id="@+id/planadd_textfield_plan_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/neutral000"
                        app:layout_constraintTop_toBottomOf="@id/planadd_tv_plan_title_location"
                        app:layout_constraintStart_toStartOf="@id/planadd_tv_plan_title_location"
                        app:placeholderText="@string/home_plan_add_plan_location_placeholder"
                        app:textAppearance="@style/Subheadline"
                        app:text="@{vm.uiState.planLocation}"
                        />

                    <!--상세 안내-->

                    <TextView
                        android:id="@+id/planadd_tv_plan_title_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/home_plan_add_plan_detail_information"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/neutral800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_textfield_plan_location" />

                    <com.umc.presentation.component.UTextField
                        android:id="@+id/planadd_textfield_plan_detail"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/neutral000"
                        app:layout_constraintTop_toBottomOf="@id/planadd_tv_plan_title_detail"
                        app:layout_constraintStart_toStartOf="@id/planadd_tv_plan_title_detail"
                        app:placeholderText="@string/home_plan_add_plan_detail_placeholder"
                        app:textAppearance="@style/Subheadline"
                        app:text="@{vm.uiState.planDetail}"
                        />


                <!-- 참여자 명단-->
                    <TextView
                        android:id="@+id/planadd_tv_plan_title_attend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/home_plan_add_plan_attend"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/neutral800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_textfield_plan_detail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="*"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/danger500"
                        app:layout_constraintStart_toEndOf="@id/planadd_tv_plan_title_attend"
                        app:layout_constraintTop_toTopOf="@id/planadd_tv_plan_title_attend" />


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/planadd_btn_upload_csv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/select_color_accent500"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:rippleColor="@android:color/transparent"
                        app:strokeWidth="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/planadd_tv_plan_title_attend"
                        app:layout_constraintBottom_toBottomOf="@id/planadd_tv_plan_title_attend"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="6dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_upload"
                                app:tint="@color/neutral000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/csv_upload"
                                android:textColor="@color/neutral000"
                                android:textAppearance="@style/SubheadlineBold" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/planadd_cdv_selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="@{vm.uiState.isSelectedParticipant == true ? View.VISIBLE : View.GONE}"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/neutral300"
                        app:cardBackgroundColor="@color/neutral000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_btn_upload_csv"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/planadd_rcv_selected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintStart_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/planadd_btn_upload_csv" />

                    </com.google.android.material.card.MaterialCardView>



                    <com.umc.presentation.component.UTextField
                        android:id="@+id/planadd_textifield_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:textAppearance="@style/Callout"
                        app:backgroundColor="@color/neutral100"
                        app:prevIcon="@drawable/ic_search"
                        app:prevIconSize="24dp"
                        app:prevIconTint="@color/neutral400"
                        app:borderWidth="0dp"
                        app:placeholderText="@string/home_plan_add_plan_search_placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_cdv_selected" />


                    <!--검색 결과창 (이 부분은 겹치는 곳으로 표시)-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/planadd_layout_search_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_neutral100_radius16"
                        android:visibility="@{vm.uiState.isSearchOverlayVisible ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@id/planadd_textifield_search"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/planadd_rcv_search_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!--카테고리-->

                    <TextView
                        android:id="@+id/planadd_tv_plan_title_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/home_plan_add_plan_category"
                        android:textAppearance="@style/HeadlineBold"
                        android:textColor="@color/neutral800"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_layout_search_overlay" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/planadd_rcv_search_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_tv_plan_title_category"
                        />


                    <androidx.constraintlayout.widget.Guideline
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/planadd_guideline_bottom"
                        app:layout_constraintGuide_percent="0.5"
                        android:orientation="vertical"/>

                    <com.umc.presentation.component.UButton
                        android:id="@+id/planadd_btn_cancel_plan"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/neutral000"
                        app:cornerRadius="8dp"
                        app:pressedColor="@color/neutral200"
                        app:text="@string/cancel"
                        app:textAppearance="@style/HeadlineBold"
                        app:textColor="@color/neutral800"
                        app:borderWidth="1dp"
                        app:borderColor="@color/neutral300"
                        app:layout_constraintEnd_toStartOf="@id/planadd_guideline_bottom"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_rcv_search_category"
                        />

                    <com.umc.presentation.component.UButton
                        android:id="@+id/planadd_btn_register_plan"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginStart="8dp"
                        android:visibility="@{vm.uiState.registerOk == true ? View.VISIBLE : View.GONE}"
                        app:cardBackgroundColor="@color/primary500"
                        app:cornerRadius="8dp"
                        app:pressedColor="@color/primary700"
                        app:text="@string/home_plan_add_plan_register"
                        app:textAppearance="@style/HeadlineBold"
                        app:textColor="@color/neutral000"
                        app:layout_constraintStart_toEndOf="@id/planadd_guideline_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_rcv_search_category"
                        />

                    <com.umc.presentation.component.UButton
                        android:id="@+id/planadd_btn_register_plan_cancel"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginStart="8dp"
                        android:visibility="@{vm.uiState.registerOk == false ? View.VISIBLE : View.GONE}"
                        app:cardBackgroundColor="@color/neutral300"
                        app:cornerRadius="8dp"
                        app:pressedColor="@color/neutral300"
                        app:text="@string/home_plan_add_plan_register"
                        app:textAppearance="@style/HeadlineBold"
                        app:textColor="@color/neutral000"
                        app:layout_constraintStart_toEndOf="@id/planadd_guideline_bottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/planadd_rcv_search_category"
                        />



                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_marginTop="64dp"
                        app:layout_constraintTop_toBottomOf="@id/planadd_btn_register_plan"
                        app:layout_constraintStart_toStartOf="parent"/>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>